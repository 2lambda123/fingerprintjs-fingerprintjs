// Common style settings and default options for ts-node use-cases
{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "removeComments": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2021"
    }
  }
}
