{
  "compilerOptions": {
    "outDir": "dist/",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
